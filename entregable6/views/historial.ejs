<h2 style="color:crimson;">Historial</h2>

<% if(prods.length > 0){ %>
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;"><th>ID</th> <th>Nombre</th> <th>Precio</th> <th>Imagen</th> </tr>
            <% for (const producto of prods) {%>
            <tr>
                <td style="vertical-align: middle;"><%=producto.id%></td>
                <td style="vertical-align: middle;"><%=producto.nombre%></td>
                <td style="vertical-align: middle;"><%=producto.precio%></td>
                <td style="vertical-align: middle;"> <img style="height: 100px; width: 100px;"src=<%=producto.imagen%> alt=""></td>
            </tr>
            <%};%>
        </table>
    </div>
<% } else if(prods.length == 0) { %>
    <h3 class="alert alert-danger">no se encontraron datos</h1>
<% } %>
