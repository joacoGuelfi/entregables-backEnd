<form action="/productos" method="post">

    <div class="form-group">
        <label for="nombre"><b>Nombre del producto</b></label>
        <input id="nombre" class="form-control" type="text" name="nombre">
    </div>

    <div class="form-group">
        <label for="apellido"><b>Precio</b></label>
        <input id="apellido" class="form-control" type="number" name="precio">
    </div>

    <div class="form-group">
        <input type="file" name="myFile">
        <input type="submit" value="subir archivo">
        
    </div>

    <button class="btn btn-success mt-3 mb-5">Enviar</button>
</form>
<a href="/productos"><button class="btn btn-success mt-3 mb-5">Ver todos los productos</button></a>