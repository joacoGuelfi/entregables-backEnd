<h2 style="color:crimson;">Historial</h2>

<% if(prods.length > 0){ %>
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;"> <th>Nombre</th> <th>Precio</th> <th>Imagen</th> </tr>
            <% for (const producto of prods) {%>
            <tr>
                <td><%=producto.nombre%></td>
                <td><%=producto.precio%></td>
                <td><%=producto.imagen%></td>
            </tr>
            <%};%>
        </table>
    </div>
<% } else if(prods.length == 0) { %>
    <h3 class="alert alert-danger">no se encontraron datos</h1>
<% } %>

<a href="/"><button class="btn btn-success mt-3 mb-5">Cargar productos</button></a>